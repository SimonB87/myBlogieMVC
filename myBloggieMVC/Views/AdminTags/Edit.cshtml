@model myBloggieMVC.Models.ViewModels.EditTagRequest

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>
            Edit tag - Admin functionality
        </h1>
    </div>
</div>

<div class="container py-5" >

    @if (Model != null)
    {
        


    <form method="post">

        <div class="mb-3">
            <label class="form-label"> ID </label>
            <input class="form-control" type="text" id="id" asp-for="Id" readonly> </input>
        </div>

        <div class="mb-3">
            <label class="form-label"> Name </label>
            <input class="form-control" type="text" id="name" asp-for="Name"> </input>
        </div>

        <div class="mb-3">
            <label class="form-label"> Display name </label>
            <input class="form-control" type="text" id="displayName" asp-for="DisplayName"> </input>
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark"> Update </button>
                <button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="AdminTags" asp-action="Delete"> Delete </button>
            </div>

        </div>

        </form>
    }
    else
    {
        <p>
            <h2>Tag not found</h2>
        </p>
    }

</div>